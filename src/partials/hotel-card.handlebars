{{#each hotels}}
  <article class="hotel-card">
    <div class="hotel-card__wrapper">
      <div class="hotel-card__image">
        <div class="hotel-image">
          <img src="{{images.[0]}}" alt="Hotel image" onError="this.onerror=null;this.src='{{images.[1]}}';"/>
        </div>
      </div>
      <div class="hotel-card__detail">
        <div class="hotel-card__name-container">
          <h1 class="hotel-card__name"><a class="hotel-card__name--link">{{name}}</a></h1>
          <div class="hotel-card__stars-container">
            <ul class="hotel-card__stars">
              {{[../helpers/getStars] stars}}
            </ul>
            <span class="hotel-text">Hotel</span>
          </div>
        </div>
        <div class="hotel-card__location-container">
          <div class="hotel-card__location">
            <i class="material-icons">location_on</i>
            <p class="location-text">{{[../helpers/getLocation] city country}}</p>
          </div>
        </div>
        <div class="hotel-card__reviews-container">
          <div class="hotel-card__reviews">
            <div class="hotel-card__rating-box">
              <div class="hotel-card__rating">{{[../helpers/getFixedNumber] rating}}</div>
            </div>
            <a href="#" class="hotel-card__reviews-text">See all Reviews</a>
          </div>
          <span class="location__arrow-down"><i class="material-icons">keyboard_arrow_right</i></span>
        </div>
      </div>
      <div class="hotel-card__price-container">
        <div class="hotel-card__price">
          <h1>$ {{price}}</h1>
        </div>
        <button id="{{id}}" class="view-details__button">
          <span class="view-details__button--text">View Details</span>
          <i class="material-icons">keyboard_arrow_down</i>
        </button>
      </div>
    </div>
  </article>
  {{> details this}}
{{else}}
  <div class="no-hotels">
    <div class="no-hotels__text">
      No hotels found. Please update search criteria.
    </div>
  </div>
{{/each}}
